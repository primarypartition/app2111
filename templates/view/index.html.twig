{% extends 'base.html.twig' %}

{% block title %}Hello ViewController!{% endblock %}

{% set s_users = [{name: 'John'}, {name: 'Susan'}, {name: 'Robert'}] %}

{% set string = "some string \n from \n database"%}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <p>The google tracking code is: {{ ga_code }}</p>

    <h1>Hello {{ controller_name|upper }}! âœ…</h1>

    {% for s_user in s_users %}
        {% if s_user.name == 'Susan' %}
            <p>{{s_user.name}}</p>
        {% else %}
            No users where found
        {% endif %}
    {% endfor %}

    {{ include('includes/subview.html.twig', { 'users': users }) }}

    {% for i in 1..10 %}
        <div class="{{ cycle(['even', 'odd'], i) }}">
            {{i}}
        </div>
    {% endfor %}

    <ul>
        {% for user in users %}
            <li>{{user}}</li>
        {% endfor %}
    </ul>

    {{ path('view') }} <br>

    {{ url('view') }} <br>

    {{ asset('images/logo.png') }} <br>

    {{ absolute_url(asset('images/logo.png')) }}

    <img src="{{ absolute_url(asset('images/logo.png')) }}" alt="Symfony 4 course" />
     
    {{ string|escape('html') }}

</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        alert(2);
    </script>

    <script>
        var route = "{{ string|escape('js') }}";
        {# alert(route); #}
    </script>
{% endblock %}
